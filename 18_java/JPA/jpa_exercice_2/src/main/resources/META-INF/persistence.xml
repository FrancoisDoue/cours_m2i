<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa_exercice_2">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.jpa_exercice_2.entity.Identification</class>
        <class>org.jpa_exercice_2.entity.Computer</class>
        <class>org.jpa_exercice_2.entity.Processor</class>
        <class>org.jpa_exercice_2.entity.OS</class>
        <class>org.jpa_exercice_2.entity.Device</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa_exercice_2" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />
<!--            <property name="javax.persistence.schema-generation.database.action" value="none"/>-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>
</persistence>